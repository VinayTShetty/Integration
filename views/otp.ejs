<!DOCTYPE html>
<html>
<head>
  <title>Verify OTP</title>
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <link href="/public/styles.css" rel="stylesheet">
  <style>
    body {
      font-family: 'Segoe UI', sans-serif;
      background: linear-gradient(135deg, #dfe9f3, #ffffff);
      display: flex;
      justify-content: center;
      align-items: center;
      height: 100vh;
      margin: 0;
    }

    .otp-container {
      background: white;
      padding: 30px;
      border-radius: 15px;
      box-shadow: 0 4px 20px rgba(0,0,0,0.1);
      animation: fadeIn 1s ease-in-out;
      max-width: 400px;
      width: 100%;
      text-align: center;
      position: relative;
    }

    .otp-container h2 {
      margin-bottom: 20px;
      animation: slideInTop 0.6s ease-in-out;
    }

    .otp-input {
      font-size: 18px;
      padding: 10px;
      width: 80%;
      border-radius: 8px;
      border: 1px solid #ccc;
      outline: none;
      transition: border-color 0.3s;
      animation: popUp 0.5s ease-in-out;
    }

    .otp-input:focus {
      border-color: #007bff;
    }

    .verify-btn {
      margin-top: 20px;
      background: #007bff;
      color: white;
      border: none;
      padding: 10px 20px;
      border-radius: 8px;
      cursor: pointer;
      font-size: 16px;
      transition: background 0.3s;
      animation: fadeInUp 1s ease-in-out;
    }

    .verify-btn:hover {
      background: #0056b3;
    }

    .loader {
      border: 4px solid #f3f3f3;
      border-top: 4px solid #007bff;
      border-radius: 50%;
      width: 30px;
      height: 30px;
      animation: spin 1s linear infinite;
      display: none;
      margin: 20px auto;
    }

    .success-check {
      font-size: 40px;
      color: green;
      display: none;
      margin-top: 20px;
    }

    .error-text {
      color: red;
      margin-top: 15px;
      display: none;
    }

    @keyframes fadeIn { from { opacity: 0; transform: scale(0.9); } to { opacity: 1; transform: scale(1); } }
    @keyframes fadeInUp { from { opacity: 0; transform: translateY(20px); } to { opacity: 1; transform: translateY(0); } }
    @keyframes slideInTop { from { opacity: 0; transform: translateY(-30px); } to { opacity: 1; transform: translateY(0); } }
    @keyframes popUp { 0% { transform: scale(0.8); opacity: 0; } 100% { transform: scale(1); opacity: 1; } }
    @keyframes spin { 0% { transform: rotate(0deg); } 100% { transform: rotate(360deg); } }
  </style>
</head>
<body>

  <form id="otpForm" action="/verify-otp" method="POST" class="otp-container">
    <h2>Enter OTP</h2>
    <input type="hidden" name="phone" value="<%= phone %>" />
    <input 
      type="text"
      name="otp"
      maxlength="6"
      class="otp-input"
      placeholder="Enter 6-digit OTP"
      required
      inputmode="numeric"
      autocomplete="one-time-code" />
    <br/>
    <button type="submit" class="verify-btn">Verify</button>

    <div class="loader" id="loader"></div>
    <div class="success-check" id="successCheck">✅</div>
    <div class="error-text" id="errorText">❌ Invalid OTP. Please try again.</div>
  </form>

  <script>
    const form = document.getElementById('otpForm');
    const loader = document.getElementById('loader');
    const success = document.getElementById('successCheck');
    const errorText = document.getElementById('errorText');

    form.addEventListener('submit', async (e) => {
      e.preventDefault();
      loader.style.display = 'block';
      errorText.style.display = 'none';

      const formData = new FormData(form);
      const data = Object.fromEntries(formData);

      try {
        const res = await fetch(form.action, {
          method: 'POST',
          headers: { 'Content-Type': 'application/json' },
          body: JSON.stringify(data)
        });

        loader.style.display = 'none';

        if (res.ok) {
          success.style.display = 'block';
          setTimeout(() => {
            window.location.href = '/pay?mobile=' + data.phone;
          }, 1500);
        } else {
          errorText.style.display = 'block';
        }
      } catch (err) {
        console.error('Error verifying OTP:', err);
        loader.style.display = 'none';
        errorText.style.display = 'block';
      }
    });
  </script>

</body>
</html>
